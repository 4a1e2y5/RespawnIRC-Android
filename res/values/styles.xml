<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Light.Base" parent="PreferenceFixTheme.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AppActivityAnimation</item>
        <item name="themedShadowBottom">@drawable/shadow_bottom_light</item>
        <item name="themedShadowTop">@drawable/shadow_top_light</item>
        <item name="colorPrimary">@color/colorPrimaryThemeLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkerThemeLight</item>
        <item name="colorAccent">@color/colorAccentThemeLight</item>
        <item name="android:windowBackground">@color/windowBackgroundColorThemeLight</item>
        <item name="themedOverlayPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="themedDefaultBackgroundColor">@color/defaultBackgroundColorThemeLight</item>
        <item name="themedDarkerBackgroundColor">@color/darkerBackgroundColorThemeLight</item>
        <item name="themedLinkColor">@color/linkColorThemeLight</item>
        <item name="themedNavigationMore">@drawable/ic_more_light</item>
        <item name="themedForumIcon">@drawable/ic_forum_light</item>
        <item name="themedContentAdd">@drawable/ic_add_light</item>
        <item name="themedTextFormatGeneral">@drawable/textformat_general_light</item>
        <item name="themedContentSendIcon">@drawable/ic_msg_send_light</item>
        <item name="themedDividerColor">@color/dividerColorThemeLight</item>
        <item name="themedClearIcon">@drawable/ic_clear_light</item>
        <item name="themedBackgroundAvatar">@drawable/avatar_image_border_light</item>
        <item name="themedNavigationHeaderBackground">@drawable/navigation_header_background_light</item>
    </style>
    <style name="AppTheme.Light.Real" parent="AppTheme.Light.Base"/>

    <style name="AppTheme.Dark.Base" parent="PreferenceFixTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AppActivityAnimation</item>
        <item name="themedShadowBottom">@drawable/shadow_bottom_dark</item>
        <item name="themedShadowTop">@drawable/shadow_top_dark</item>
        <item name="colorPrimary">@color/colorPrimaryThemeDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkerThemeDark</item>
        <item name="colorAccent">@color/colorAccentThemeDark</item>
        <item name="android:windowBackground">@color/windowBackgroundColorThemeDark</item>
        <item name="themedOverlayPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="themedDefaultBackgroundColor">@color/defaultBackgroundColorThemeDark</item>
        <item name="themedDarkerBackgroundColor">@color/darkerBackgroundColorThemeDark</item>
        <item name="themedLinkColor">@color/linkColorThemeDark</item>
        <item name="themedNavigationMore">@drawable/ic_more_dark</item>
        <item name="themedForumIcon">@drawable/ic_forum_dark</item>
        <item name="themedContentAdd">@drawable/ic_add_dark</item>
        <item name="themedTextFormatGeneral">@drawable/textformat_general_dark</item>
        <item name="themedContentSendIcon">@drawable/ic_msg_send_dark</item>
        <item name="themedDividerColor">@color/dividerColorThemeDark</item>
        <item name="themedClearIcon">@drawable/ic_clear_dark</item>
        <item name="themedBackgroundAvatar">@drawable/avatar_image_border_dark</item>
        <item name="themedNavigationHeaderBackground">@drawable/navigation_header_background_dark</item>
    </style>
    <style name="AppTheme.Dark.Real" parent="AppTheme.Dark.Base"/>

    <style name="AppTheme.Black.Base" parent="PreferenceFixTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AppActivityAnimation</item>
        <item name="themedShadowBottom">@drawable/shadow_bottom_dark</item>
        <item name="themedShadowTop">@drawable/shadow_top_dark</item>
        <item name="colorPrimary">@color/colorPrimaryThemeBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkerThemeBlack</item>
        <item name="colorAccent">@color/colorAccentThemeDark</item>
        <item name="android:windowBackground">@color/windowBackgroundColorThemeBlack</item>
        <item name="themedOverlayPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="themedDefaultBackgroundColor">@color/defaultBackgroundColorThemeBlack</item>
        <item name="themedDarkerBackgroundColor">@color/darkerBackgroundColorThemeBlack</item>
        <item name="themedLinkColor">@color/linkColorThemeDark</item>
        <item name="themedNavigationMore">@drawable/ic_more_dark</item>
        <item name="themedForumIcon">@drawable/ic_forum_dark</item>
        <item name="themedContentAdd">@drawable/ic_add_dark</item>
        <item name="themedTextFormatGeneral">@drawable/textformat_general_dark</item>
        <item name="themedContentSendIcon">@drawable/ic_msg_send_dark</item>
        <item name="themedDividerColor">@color/dividerColorThemeDark</item>
        <item name="themedClearIcon">@drawable/ic_clear_dark</item>
        <item name="themedBackgroundAvatar">@drawable/avatar_image_border_black</item>
        <item name="themedNavigationHeaderBackground">@drawable/navigation_header_background_dark</item>
    </style>
    <style name="AppTheme.Black.Real" parent="AppTheme.Black.Base"/>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">?attr/colorAccent</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_open_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_open_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_close_out</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <!-- uniquement pour la couleur de la statusbar, parce que flemme de faire un theme special v21 etc -->
        <item name="colorPrimaryDark">@color/splashBackgroundColorDarker</item>
    </style>

    <style name="ColorAccentIsLinkColor">
        <item name="colorAccent">?attr/themedLinkColor</item>
    </style>
</resources>
