<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/settingsGeneralTitle">
        <android.support.v7.preference.CheckBoxPreference
            android:key="@string/settingsTransformStickerToSmiley"
            android:title="@string/transformStickerToSmileyTitle"
            android:summary="@string/transformStickerToSmileySummary"/>

        <android.support.v7.preference.CheckBoxPreference
            android:key="@string/settingsIgnoreTopicToo"
            android:title="@string/ignoreTopicTooTitle"/>

        <android.support.v7.preference.CheckBoxPreference
            android:key="@string/settingsHideTotallyMessagesOfIgnoredPseudos"
            android:title="@string/hideTotallyMessagesOfIgnoredPseudosTitle"/>

        <android.support.v7.preference.CheckBoxPreference
            android:key="@string/settingsEnableFastRefreshOfImages"
            android:title="@string/enableFastRefreshOfImagesTitle"
            android:summary="@string/enableFastRefreshOfImagesSummary"/>

        <android.support.v7.preference.CheckBoxPreference
            android:key="@string/settingsEnableColorDeletedMessages"
            android:title="@string/enableColorDeletedMessagesTitle"/>
    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/styleModeForum">
        <android.support.v7.preference.CheckBoxPreference
            android:key="@string/settingsSeparationBetweenMessagesBlackThemeModeForum"
            android:title="@string/separationBetweenMessagesTitle"
