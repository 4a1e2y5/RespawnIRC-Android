<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/item_one_jvcmessages_text_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/menu_overflow_row"
        android:layout_toLeftOf="@+id/menu_overflow_row"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"/>
    <ImageButton
        style="@style/SelectableItemBackground"
        android:id="@+id/menu_overflow_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:src="@drawable/ic_action_navigation_more"
        android:contentDescription="@string/overflow_menu_desc"/>

    <TextView
        android:id="@+id/item_two_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_one_jvcmessages_text_row"
        android:layout_marginTop="4dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textColorLink="@color/linkColor"/>

</RelativeLayout>
