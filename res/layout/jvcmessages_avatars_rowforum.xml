<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp">

    <LinearLayout
        android:id="@+id/layout_one_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_one_jvcmessages_text_row"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitCenter"
            android:background="?attr/themedBackgroundAvatar"
            android:contentDescription="@string/avatar"/>
        <TextView
            android:id="@+id/item_one_jvcmessages_text_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="6dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            style="@style/SelectableItemBackground"
            android:id="@+id/menu_overflow_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="?attr/themedNavigationMore"
            android:contentDescription="@string/overflow_menu_desc"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_two_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_one_jvcmessages_text_row"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:textColorLink="?attr/themedLinkColor"/>

    <View
        android:id="@+id/item_separator_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_two_jvcmessages_text_row"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="?attr/themedMoreDarkerBackgroundColor"/>

    <TextView
        android:id="@+id/item_three_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_separator_jvcmessages_text_row"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:textColorLink="?attr/themedLinkColor"/>

</RelativeLayout>
