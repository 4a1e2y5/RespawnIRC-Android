<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/elevationOfCards"
    app:cardCornerRadius="@dimen/cornerRadiusOfCards"
    app:cardBackgroundColor="?attr/themedDefaultBackgroundColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/forumlist_cat_blabla_selectforum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/forumlist_arrow_blabla_selectforum"
                android:layout_toStartOf="@+id/forumlist_arrow_blabla_selectforum"
                android:text="@string/forumlistCatTitleBlabla"
                android:textAllCaps="true"
                android:textColor="?attr/themedForumListCatTitleColor"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/forumlist_arrow_blabla_selectforum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="?attr/themedForumListDropDownArrow"
                android:contentDescription="@string/expandList"/>
        </RelativeLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/forumlist_content_blabla_selectforum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            app:columnCount="2"
            android:visibility="gone">
            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:text="@string/forumlistBlablaBelow15Years"
                android:tag="@string/forumlistBlablaBelow15YearsLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:text="@string/forumlistBlabla1518Years"
                android:tag="@string/forumlistBlabla1518YearsLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                android:text="@string/forumlistBlabla1825Years"
                android:tag="@string/forumlistBlabla1825YearsLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:text="@string/forumlistBlabla2535Years"
                android:tag="@string/forumlistBlabla2535YearsLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:text="@string/forumlistBlablaAbove35Years"
                android:tag="@string/forumlistBlablaAbove35YearsLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:text="@string/forumlistBlablaBelgium"
                android:tag="@string/forumlistBlablaBelgiumLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:text="@string/forumlistBlablaSwiss"
                android:tag="@string/forumlistBlablaSwissLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:text="@string/forumlistBlablaQuebec"
                android:tag="@string/forumlistBlablaQuebecLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:text="@string/forumlistBlablaJapan"
                android:tag="@string/forumlistBlablaJapanLink"/>
        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
