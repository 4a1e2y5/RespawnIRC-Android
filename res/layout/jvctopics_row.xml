<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/topic_icon_jvctopics_row"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/topicIcon"/>

    <android.support.text.emoji.widget.EmojiAppCompatTextView
        android:id="@+id/title_text_jvctopics_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/topic_icon_jvctopics_row"
        android:layout_toEndOf="@+id/topic_icon_jvctopics_row"/>

    <TextView
        android:id="@+id/author_text_jvctopics_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/topic_icon_jvctopics_row"
        android:layout_toEndOf="@+id/topic_icon_jvctopics_row"
        android:layout_below="@+id/title_text_jvctopics_row"/>

    <TextView
        android:id="@+id/date_text_jvctopics_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title_text_jvctopics_row"/>

</RelativeLayout>
