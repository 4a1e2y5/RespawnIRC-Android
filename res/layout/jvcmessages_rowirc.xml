<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/item_one_jvcmessages_text_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"/>
    <ImageButton
        style="@style/SelectableItemBackground"
        android:id="@+id/menu_overflow_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:src="@drawable/ic_action_navigation_more"
        android:contentDescription="@string/overflow_menu_desc"/>

    <TextView
        android:id="@+id/item_two_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_one_jvcmessages_text_row"
        android:layout_marginTop="8dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textColorLink="@color/linkColor"/>

    <View
        android:id="@+id/item_separator_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_two_jvcmessages_text_row"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:background="@color/moreDarkerColorForBackground"/>

    <TextView
        android:id="@+id/item_three_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_separator_jvcmessages_text_row"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textColorLink="@color/linkColor"/>

</RelativeLayout>
