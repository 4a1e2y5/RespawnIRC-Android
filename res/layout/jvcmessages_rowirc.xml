<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/item_one_jvcmessages_text_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
    <ImageButton
        style="@style/SelectableItemBackground"
        android:id="@+id/menu_overflow_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="?attr/themedNavigationMore"
        android:contentDescription="@string/overflow_menu_desc"/>

    <TextView
        android:id="@+id/item_two_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:layout_below="@+id/item_one_jvcmessages_text_row"
        android:textColorLink="?attr/themedLinkColor"/>

    <View
        android:id="@+id/item_separator_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/item_two_jvcmessages_text_row"
        android:background="?attr/themedDarkerBackgroundColor"/>

    <TextView
        android:id="@+id/item_three_jvcmessages_text_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:layout_below="@+id/item_separator_jvcmessages_text_row"
        android:textColorLink="?attr/themedLinkColor"/>

</RelativeLayout>
