<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/elevationOfCards"
    app:cardCornerRadius="@dimen/cornerRadiusOfCards"
    app:cardBackgroundColor="?attr/themedDefaultBackgroundColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/forumlist_cat_jvc_selectforum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/forumlist_arrow_jvc_selectforum"
                android:layout_toStartOf="@+id/forumlist_arrow_jvc_selectforum"
                android:text="@string/forumlistCatTitleJvc"
                android:textAllCaps="true"
                android:textColor="?attr/themedForumListCatTitleColor"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/forumlist_arrow_jvc_selectforum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="?attr/themedForumListDropDownArrow"
                android:contentDescription="@string/expandList"/>
        </RelativeLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/forumlist_content_jvc_selectforum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            app:columnCount="3"
            android:visibility="gone">
            <Button
                android:theme="?attr/themedButtonBlueStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="3"
                app:layout_columnWeight="1"
                android:text="@string/forumlistJvcCommunity"
                android:tag="@string/forumlistJvcCommunityLink"/>

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_rowSpan="2"
                app:layout_rowWeight="1"
                android:layout_margin="4dp"
                android:background="?attr/themedDarkerBackgroundColor"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                android:text="@string/forumlistJvcRedacAndYou"
                android:tag="@string/forumlistJvcRedacAndYouLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                android:text="@string/forumlistJvcSuggestionsJvc"
                android:tag="@string/forumlistJvcSuggestionsJvcLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                android:text="@string/forumlistJvcStoreJvc"
                android:tag="@string/forumlistJvcStoreJvcLink"/>

            <Button
                android:theme="?attr/themedButtonSubForumStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_gravity="center_vertical"
                android:text="@string/forumlistJvcSurveys"
                android:tag="@string/forumlistJvcSurveysLink"/>

            <Button
                android:theme="?attr/themedButtonRedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="3"
                app:layout_columnWeight="1"
                android:text="@string/forumlistJvcContribUsers"
                android:tag="@string/forumlistJvcContribUsersLink"/>

            <Button
                android:theme="?attr/themedButtonOrangeStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="3"
                app:layout_columnWeight="1"
                android:text="@string/forumlistJvcHelpUsers"
                android:tag="@string/forumlistJvcHelpUsersLink"/>
        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
