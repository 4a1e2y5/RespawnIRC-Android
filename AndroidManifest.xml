<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.franckrj.respawnirc">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:supportsRtl="true"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_rirc"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Real">
        <activity
            android:name=".MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectForumActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".jvcviewers.ShowForumActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".jvcviewers.ShowTopicActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".ConnectActivity"
            android:label="@string/connectToJVC"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/preference">
        </activity>
    </application>

</manifest>
